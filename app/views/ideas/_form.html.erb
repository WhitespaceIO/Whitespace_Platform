<%= form_for @idea, :url => new_project_phase_idea_path(phase.project, phase, idea), :html => {id: 'idea-form', :class => 'form-inline'} do |f| %>
  <% if @idea.errors.any? %>
       <ul class="errors">
         <% @idea.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
         <% end %>
       </ul>
  <% end %>
     <%= f.text_area :text, {:placeholder => 'Idea', :rows => 1} %>
  <%= f.submit 'Submit', :class => 'btn btn-default' %>
<% end %>