$comment = $('<%=j render partial: 'comments/comment', object: @comment %>');
<% if !@idea.nil? %>
$comment.insertBefore(".ideas[data-idea='<%= @idea.id %>'] .comment:last-child");
<% elsif !@phase.nil? %>
$comment.insertBefore(".phases[data-phase='<%= @phase.id %>'] .comment:last-child");
<% elsif !@project.nil? %>
$comment.insertBefore(".projects[data-project='<%= @project.id %>'] .comment:last-child");
<% end %>
