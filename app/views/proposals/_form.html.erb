<%= form_for [@phase.project, @phase, @proposal], :html => {id: 'proposal-form', :class => 'form-inline'} do |f| %>
  <% if @proposal.errors.any? %>
       <ul class="errors">
         <% @proposal.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
         <% end %>
       </ul>
  <% end %>
     <%= f.text_area :text, {:placeholder => 'Proposal', :rows => 1} %>
  <%= f.submit 'Submit', :class => 'btn' %>
<% end %>