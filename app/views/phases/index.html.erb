<h1>Phases</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @phases.each do |phase| %>
       <tr>
         <td><%= phase.name %></td>
         <td><%= phase.description %></td>
         <td><%= link_to 'Show', project_phase_path(phase.project, phase) %></td>
         <td><%= link_to 'Edit', edit_project_phase_path(phase.project, phase) %></td>
         <td><%= link_to 'Destroy', phase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
  <% end %>
</table>

