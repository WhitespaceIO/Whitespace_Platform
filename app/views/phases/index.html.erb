<h4><%= link_to 'Projects', projects_path %> |
    <%= link_to @project.name, project_path(@project) %> | Phases</h4>
<hr>
<div class="phases clear">
  <%= render partial: 'phase', :collection => @phases, :as => :phase %>
</div>
<hr>
<h4>Comments</h4>
<div class="comments clear">
  <%= render partial: 'comments/comment', :collection => @project.comments, :as => :comment %>
</div>
<div class="box">
  <%= render 'projects/comment_form', :locals=>{:project => @project, :comment => @comment} %>
</div>
<hr>


