$panel_body = $("#phase-<%= @phase.id %>").find('.panel-body');
if ($panel_body.children().length > 0) {
     $panel_body.slideToggle("slow", function() {
          $panel_body.empty();
     });
}
else {
     $panel_body.hide();
     $panel_body.html('<%=j render partial: 'phases/details', object: @phase, :as => :phase %>');
     $panel_body.slideToggle('slow');
}