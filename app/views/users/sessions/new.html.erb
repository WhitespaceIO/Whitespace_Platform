<h2>Login</h2>

<%= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :email, :class => 'col-lg-2 control-label' %>
    <div class="col-md-3">
      <%= f.email_field :email, :autofocus => true, :placeholder => 'Email', :class => 'form-control', :type => 'email' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => 'col-lg-2 control-label' %>
    <div class="col-md-3">
      <%= f.password_field :password, :autofocus => true, :placeholder => 'Password', :class => 'form-control', :type => 'password' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <div class="checkbox">
          <%= f.label :remember_me do |l| %>
            <%= f.check_box :remember_me %> Remember me
          <% end %>
        </div>
      </div>
    </div>
  <% end -%>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit 'Login', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= render 'users/shared/links' %>
