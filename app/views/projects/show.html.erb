<ol class="breadcrumb">
  <li><%= link_to 'Projects', projects_path %></li>
  <li class="active"><%= @project.name %></li>
</ol>

<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1><%= @project.name %></h1>
  <p class="text-muted"><%= render partial: 'projects/location', :collection => @project.locations, :as => :location %></p>
</div>

<p class="lead"><%= @project.description %></p>

<ul class="list-inline">
<% @project.tags.each do |tag|%>
  <li><span class="tag label label-default"><%= tag.name %></span></li>
<% end %>
</ul>

<div class="phases project-phases comb progress">
  <%= render partial: 'projects/phase', :collection => @project.phases, :as => :phase %>
</div>

<ol class="phases project-phases timeline list-unstyled">
  <li class="timeline-axis"></li>
  <%= render partial: 'phases/phase', :collection => @project.phases, :as => :phase %>
</ol>
