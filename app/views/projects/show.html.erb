<p id="notice"><%= notice %></p>
<h4><%= link_to 'Projects', projects_path %> | <%= @project.name %></h4>
<h5><%= @project.description %></h5>
<%= render partial: 'projects/location', :collection => @project.locations, :as => :location %>
<hr>
<% @project.tags.each do |tag|%>
     <span class="tag label label-default"><%= tag.name %></span>
<% end %>
<hr>
<h4><%= link_to 'Phases', project_phases_path(@project) %></h4>
<ul id="phases" class="list-inline">
  <%= render partial: 'phase', :collection => @project.phases, :as => :phase %>
</ul>
<div id='phase-partial'></div>
<hr>
<h4><%= link_to 'Comments', project_comments_path(@project) %></h4>
<div id="comments" class="clear">
  <%= render partial: 'comments/comment', :collection => @project.comments, :as => :comment %>
</div>
<% if can? :create, Comment %>
<div class="well well-sm">
  <%= render 'comments/form', :record => [@project, @comment], :comment => @comment %>
</div>
<% end %>
<hr>